lue":"R","position":{"start":{"line":9,"column":1},"end":{"line":9,"column":1}},"key":"fvNHRLtbxq"}],"key":"zTttodFK1b"},{"type":"text","value":"eusable.\nThis is referred to as ","position":{"start":{"line":9,"column":1},"end":{"line":9,"column":1}},"key":"IPM0QhvXS0"},{"type":"link","kind":"ref","identifier":"rr-rdm-fair","label":"rr-rdm-fair","children":[{"type":"text","value":"FAIR Principles","key":"NL679R9WOg"}],"url":"/reproducible-research/rdm/rdm-fair","internal":true,"dataUrl":"/reproducible-research.rdm.rdm-fair.json","key":"V5Zoy0lrAo"},{"type":"text","value":" that provides guidelines to improve the Findability, Accessibility, Interoperability and Reusability of digital assets; all of which support research reproducibility.","position":{"start":{"line":9,"column":1},"end":{"line":9,"column":1}},"key":"SZy0VTAPBH"}],"key":"Dhv1RHAJRW"},{"type":"paragraph","position":{"start":{"line":13,"column":1},"end":{"line":15,"column":1}},"children":[{"type":"text","value":"This aspect is already considered when developing your ","position":{"start":{"line":13,"column":1},"end":{"line":13,"column":1}},"key":"dxPWmztixE"},{"type":"link","kind":"ref","identifier":"rr-rdm-dmp","label":"rr-rdm-dmp","children":[{"type":"text","value":"Data Management Plan (DMP)","key":"TSBhDvJwv8"}],"url":"/reproducible-research/rdm/rdm-dmp","internal":true,"dataUrl":"/reproducible-research.rdm.rdm-dmp.json","key":"qZZUQL1tjl"},{"type":"text","value":" (see ","position":{"start":{"line":13,"column":1},"end":{"line":13,"column":1}},"key":"nqMMdhEBxH"},{"type":"crossReference","kind":"heading","identifier":"pd-overview-planning-dmp","label":"pd-overview-planning-dmp","children":[{"type":"text","value":"Data Management Plan","position":{"start":{"line":23,"column":1},"end":{"line":23,"column":1}},"key":"OwQsJDN6yk"}],"template":"{name}","resolved":true,"html_id":"pd-overview-planning-dmp","remote":true,"url":"/project-design/pd-overview/pd-overview-methods","dataUrl":"/project-design.pd-ove